<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Firebase Confirmation theme-->
    <style name="FirebaseConfirmationTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FirebaseConfirmationActionBar</item>
    </style>

    <style name="FirebaseConfirmationActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#00BB00</item>
    </style>

</resources>
